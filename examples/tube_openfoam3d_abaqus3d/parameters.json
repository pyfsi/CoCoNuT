{
  "settings": {
    "number_of_timesteps": 100
  },
  "coupled_solver": {
    "type": "coupled_solvers.iqni",
    "settings": {
      "timestep_start": 0,
      "delta_t": 0.0001,
      "omega": 0.01,
      "save_results": true,
      "model": {
        "type": "coupled_solvers.models.ls",
        "settings": {
          "min_significant": 1e-09,
          "q": 10
        }
      }
    },
    "predictor": {
      "type": "predictors.linear"
    },
    "convergence_criterion": {
      "type": "convergence_criteria.or",
      "settings": {
        "criteria_list": [
          {
            "type": "convergence_criteria.iteration_limit",
            "settings": {
              "maximum": 20
            }
          },
          {
            "type": "convergence_criteria.relative_norm",
            "settings": {
              "tolerance": 1e-3,
              "order": 2
            }
          }
        ]
      }
    },
    "solver_wrappers": [
      {
        "type": "solver_wrappers.openfoam.OpenFOAM_41",
        "settings": {
          "working_directory": "CFD",
          "application": "CoCoNuT_pimpleFoam",
          "dimensions": 3,
          "boundary_names": [
            "mantle"
          ],
          "start_time": 0,
          "end_time": 0.01,
          "interface_input": [
            {
              "model_part": "mantle_input",
              "variables": [
                "displacement"
              ]
            }
          ],
          "interface_output": [
            {
              "model_part": "mantle_output",
              "variables": [
                "pressure",
                "traction"
              ]
            }
          ],
          "cores": 8,
          "decomposeMethod": "scotch",
          "newtonmax": 10,
          "newtonmin": 1,
          "newtontol": 1e-3,
          "write_interval": 1,
          "write_precision": 5,
          "time_precision": 5,
          "meshmotion_solver": "displacementLaplacian",
          "diffusivity": "inverseDistance",
          "is_incompressible": true,
          "density": 1000
        }
      },
      {
        "type": "solver_wrappers.mapped",
        "settings": {
          "solver_wrapper": {
            "type": "solver_wrappers.abaqus.v614",
            "settings": {
              "working_directory": "CSM",
              "cores": 1,
              "dimensions": 3,
              "arraysize": 10e5,
              "surfaces": 1,
              "surfaceIDs": [
                "WALLOUTSIDE"
              ],
              "interface_input": [
                {
                  "model_part": "WALLOUTSIDE_load_points",
                  "variables": [
                    "pressure",
                    "traction"
                  ]
                }
              ],
              "interface_output": [
                {
                  "model_part": "WALLOUTSIDE_nodes",
                  "variables": [
                    "displacement"
                  ]
                }
              ],
              "mp_mode": "THREADS",
              "input_file": "Base.inp",
              "save_iterations": 1
            }
          },
          "mapper_interface_input": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          },
          "mapper_interface_output": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          }
        }
      }
    ]
  }
}
